{
  "name": "miniwrit",
  "version": "0.1.0",
  "private": true,
  "description": "A clean, minimal app to write thoughts.",
  "author": "tanlucvn",
  "keywords": [
    "writing",
    "notes",
    "thoughts",
    "minimal",
    "clean",
    "nextjs",
    "tailwindcss",
    "lightweight",
    "focus",
    "text"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
